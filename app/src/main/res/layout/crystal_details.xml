<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llBSCrystal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#f4e6d8">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvCountdown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans_regular"
                    android:textStyle="normal"
                    android:textSize="14sp"
                    android:textColor="#de000000"
                    android:letterSpacing="0.06"
                    android:lineSpacingExtra="4sp"
                    android:gravity="center_vertical"
                    android:text="30 дней"
                    android:layout_marginStart="48dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginBottom="8dp"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_countdown"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="21dp"/>

                <ImageView
                    android:id="@+id/ivClose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_close_crystal_details"
                    android:padding="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_gravity="end"/>

            </FrameLayout>

            <ImageView
                android:id="@+id/ivCrystal"
                android:layout_width="180dp"
                android:layout_height="180dp"
                tools:src="@drawable/ic_cristal_0"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_semibold"
                android:textStyle="normal"
                android:textSize="22sp"
                android:textColor="#000000"
                android:letterSpacing="0.04"
                android:lineSpacingExtra="6.3sp"
                android:gravity="center_horizontal"
                tools:text="Amethyst"
                android:layout_marginTop="8dp"
                android:layout_gravity="center_horizontal"
                />

            <TextView
                android:id="@+id/tvProp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_regular"
                android:textStyle="normal"
                android:textSize="14sp"
                android:textColor="#000000"
                android:letterSpacing="0.06"
                android:lineSpacingExtra="4sp"
                android:gravity="center_horizontal"
                tools:text="Health"
                android:layout_marginTop="6dp"
                android:layout_gravity="center_horizontal"
                />

            <ImageView
                android:id="@+id/ivType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_gravity="center_horizontal"
                tools:src="@drawable/ic_type_0"/>

            <TextView
                android:id="@+id/tvDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                android:textSize="14sp"
                android:textColor="#000000"
                android:letterSpacing="0.06"
                android:lineSpacingExtra="4.9sp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                tools:text="Аметист - кристалл здоровья и внутренней гармонии. Он способен избавить своего хозяина от плохих предчувствий, улучшить сон, укрепить память и предотвратить развитие вредных привычек.

Используйте магию Аметиста, если чувтсвуете подавленное состояние, нарушение сна или не можете избавиться от вредных привычек. Он поможет вам сосредоточиться на своем духовном и физическом здоровье."
                />


            <Button
                android:id="@+id/btnNuyPremium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Купить премиум"
                android:layout_marginTop="30dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/shape_buy_crystal"
                android:fontFamily="@font/open_sans_regular"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#ffffff"
                android:letterSpacing="0.09"
                android:lineSpacingExtra="2sp"
                android:paddingStart="28dp"
                android:paddingBottom="12dp"
                android:paddingEnd="28dp"
                android:paddingTop="12dp"/>

            <TextView
                android:id="@+id/btnBuyCrystal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_regular"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#2e2c5c"
                android:letterSpacing="0.09"
                android:lineSpacingExtra="2sp"
                android:text="Купить за $325"
                android:paddingTop="12dp"
                android:paddingEnd="28dp"
                android:paddingBottom="12dp"
                android:paddingStart="28dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_gravity="center_horizontal"
                />




        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>