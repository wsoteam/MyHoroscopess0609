<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:background="@color/main_violet">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:letterSpacing="0.06"
        android:lineSpacingExtra="4sp"
        android:text="@string/today_apos_s_matches"
        android:textColor="#ffffff"
        android:textSize="14sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:stretchColumns="0,1,2">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:letterSpacing="0.06"
                    android:lineSpacingExtra="4sp"
                    android:text="@string/love"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivLove"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_marginTop="12dp"
                    android:layout_gravity="center_horizontal"
                    tools:srcCompat="@drawable/ic_aries_matches" />

                <TextView
                    android:id="@+id/tvLove"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="12dp"
                    android:letterSpacing="0.06"
                    android:lineSpacingExtra="3.4sp"
                    android:textColor="#ffffff"
                    android:textSize="12sp"
                    tools:text="Aries" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:letterSpacing="0.06"
                    android:lineSpacingExtra="4sp"
                    android:text="@string/friendship"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivFriend"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="12dp"
                    tools:srcCompat="@drawable/ic_aries_matches" />

                <TextView
                    android:id="@+id/tvFriend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="12dp"
                    android:letterSpacing="0.06"
                    android:lineSpacingExtra="3.4sp"
                    android:textColor="#ffffff"
                    android:textSize="12sp"
                    tools:text="Aries" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginEnd="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:letterSpacing="0.06"
                    android:lineSpacingExtra="4sp"
                    android:text="@string/career"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivCareer"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="12dp"
                    tools:srcCompat="@drawable/ic_aries_matches" />

                <TextView
                    android:id="@+id/tvCareer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="12dp"
                    android:letterSpacing="0.06"
                    android:lineSpacingExtra="3.4sp"
                    android:textColor="#ffffff"
                    android:textSize="12sp"
                    tools:text="Aries" />

            </LinearLayout>


        </TableRow>


    </TableLayout>

    <View
        android:id="@+id/divider6"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="17dp"
        android:background="#14ffffff" />

</LinearLayout>
</FrameLayout>